{
  "name": "node-xmpp-core",
  "version": "4.2.0",
  "description": "core files for the node-xmpp project",
  "main": "index.js",
  "scripts": {
    "preversion": "npm test",
    "unit": "mocha --recursive test/",
    "lint": "standard",
    "coverage": "istanbul cover _mocha --report lcovonly -- -R spec",
